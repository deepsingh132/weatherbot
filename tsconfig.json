{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    // "lib": ["ES2022"],
    "rootDir": ".",
    "outDir": "./prod",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // "noEmit": true,
    // "allowImportingTsExtensions": true,
    // "moduleResolution": "nodenext"
  },
  "include": ["src/**/*", "types/**/*"]
}
